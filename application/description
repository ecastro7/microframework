application: framework
    app : codigo de la aplicacion (nombre del proyecto app_nombre. ej: app_cumpleanios, app_efemerides)
        config: archivo de configuracion de la aplicacion
        controllers: archivos controladores (ej: cumpleaniosControllers)
        handles: archivo principal(opcional: secundario, ej:handle.php, secundary.php)
        models: conexiones personalizadas, logica de negocio
    libs: librerias (email, util, etc.)
    database: gestion de bases de datos.
        parameters: parametros de configuracion de las distintas base de datos
    
    
    
    

